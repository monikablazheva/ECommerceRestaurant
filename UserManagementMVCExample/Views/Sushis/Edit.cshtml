@model UserManagementMVCExample.Models.Sushi

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Sushi</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Count" class="control-label"></label>
                        <input asp-for="Count" class="form-control" />
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="control-label"></label>
                        <select asp-for="Type" asp-items="Html.GetEnumSelectList<SushiType>()" class="mr-5"></select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div> 
                </div>
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ImageURL" style="width: 100%;"></label>
                        @if (Model.ImageURL != null)
                        {
                            <img id="imageUrl" class="img-fluid" alt="Sushi image" src="data:image/*;base64,@(Convert.ToBase64String(Model.ImageURL))">
                        }
                        else
                        {
                            <img id="imageUrl" class="img-fluid" alt="Sushi image" src="">
                        }
                        <input type="file"
                               accept=".png,.jpg,.jpeg,.gif,.tif"
                               asp-for="ImageURL"
                               class="form-control form-control-sm"
                               id="formFileSm"
                               style="border:0px!important;padding: 0px;padding-top: 0px;padding-bottom: 80px;"
                               onchange="document.getElementById('imageUrl').src = window.URL.createObjectURL(this.files[0])" />
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
