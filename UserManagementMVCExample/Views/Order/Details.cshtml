@using UserManagementMVCExample.Models
@model UserManagementMVCExample.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h2>Order's details</h2>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First name: </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.FirstName)
        </dd>
        <dt class="col-sm-2">Last name: </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.LastName)
        </dd>
        <dt class="col-sm-2">Email: </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Email)
        </dd>
        <dt class="col-sm-2">Phone number: </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.PhoneNumber)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">Delivery address: </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryAdress)
        </dd>
        <dt class="col-sm-2">Time of delivery: </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryTime)
        </dd>
    </dl>
</div>
<div>
    <table class="table">
        <tr>
            <th></th>
            <th>
                Name
            </th>
            <th>
                Price (each)
            </th>
            <th>
                Quantity
            </th>
            <th>
                Sub total
            </th>
            <th></th>
        </tr>
        @foreach (OrdersItem item in Model.OrdersItems)
        {
            <tr>
                <td>
                    <div class="cart-product-tumb">
                        @if (item.Product.ImageURL != null)
                        {
                            <img src="data:image/*;base64,@(Convert.ToBase64String(item.Product.ImageURL))">
                        }
                        else
                        {
                            <img src="">
                        }
                    </div>
                </td>
                <td>
                    @item.Product.Name
                </td>
                <td>
                    @item.Product.Price лв.
                </td>
                <td>
                    @item.Count 
                </td>
                <td>
                    @item.Price
                </td>
            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td>
                <h5>Total: </h5>
            </td>
            <td>
                @Model.Total лв.
            </td>
        </tr>
    </table>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
